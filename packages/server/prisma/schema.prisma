// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountBindingType {
  GOOGLE
  FACEBOOK
}

enum Role {
  ADMINISTRATOR
  USER
}

model User {
  id                        Int           @id @default(autoincrement())
  first_name                String
  last_name                 String
  phone_number              String        @unique
  email                     String        @unique
  email_validated           Boolean       @default(false)
  credential_id             Int           @unique
  accepted_terms_of_service Boolean       @default(false)
  role                      Role
  addresses                 Address[]
  tokens                    TokenIssued[]
  credential                Credential    @relation(fields: [credential_id], references: [id])
}

model TokenIssued {
  id            Int       @id @default(autoincrement())
  refresh_token String
  expires       DateTime
  consumed      Boolean
  user_id       Int
  user          User      @relation(fields: [user_id], references: [id])
}

model Credential {
  id                Int               @id @default(autoincrement())
  password_hash     String?
  user              User[]
  account_bindings  AccountBinding[]
}

model AccountBinding {
  id            Int                 @id @default(autoincrement())
  type          AccountBindingType
  account_id    String              @unique
  credential_id Int
  credential    Credential          @relation(fields: [credential_id], references: [id])
}

model Address {
  id          Int     @id @default(autoincrement())
  street      String
  district    String
  barangay    String
  postal_code String
  province    String
  user_id     Int
  user        User    @relation(fields: [user_id], references: [id])
}
